<Window x:Class="ShasavicMusicMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShasavicMusicMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Symbol/DimensionSymbol.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top" VerticalAlignment="Top">
            <MenuItem Header="File(_F)"/>
            <MenuItem Header="Edit(_E)"/>
            <MenuItem Header="View(_V)"/>
            <MenuItem Header="Event(_N)"/>
            <MenuItem Header="Tool(_T)"/>
            <MenuItem Header="Play(_P)"/>
            <MenuItem Header="Track(_K)"/>
            <MenuItem Header="Mark(_M)"/>
            <MenuItem Header="Help(_H)"/>
        </Menu>
        <WrapPanel DockPanel.Dock="Top">
            <TextBlock Text="Scoreline Guide" VerticalAlignment="Center" Margin="4,0,0,0"/>
            <ComboBox VerticalAlignment="Center" Margin="4,0,0,0" SelectedIndex="0">
                <ComboBoxItem>
                    <ComboBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Height="21">
                            <TextBlock Text="41 edo" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem.Content>
                </ComboBoxItem>
                <ComboBoxItem>
                    <ComboBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Height="21">
                            <ContentControl Content="{StaticResource s1d}" Width="18"/>
                            <TextBlock Text="1D" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem.Content>
                </ComboBoxItem>

                <ComboBoxItem>
                    <ComboBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Height="21">
                            <ContentControl Content="{StaticResource s2d}" Width="18"/>
                            <TextBlock Text="2D" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem.Content>
                </ComboBoxItem>
                <ComboBoxItem>
                    <ComboBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Height="21">
                            <ContentControl Content="{StaticResource s3d}" Width="18"/>
                            <TextBlock Text="3D" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem.Content>
                </ComboBoxItem>
                <ComboBoxItem>
                    <ComboBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Height="21">
                            <ContentControl Content="{StaticResource s4d}" Width="18"/>
                            <TextBlock Text="4D" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem.Content>
                </ComboBoxItem>
                <ComboBoxItem>
                    <ComboBoxItem.Content>
                        <StackPanel Orientation="Horizontal" Height="21">
                            <ContentControl Content="{StaticResource s5d}" Width="18"/>
                            <TextBlock Text="5D" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ComboBoxItem.Content>
                </ComboBoxItem>
            </ComboBox>
            
        </WrapPanel>
        <Canvas>
            
        </Canvas>
    </DockPanel>
</Window>
