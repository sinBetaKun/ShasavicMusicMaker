<UserControl x:Class="ShasavicMusicMaker.Controller.Score.ChordonymViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShasavicMusicMaker.Controller.Score"
             mc:Ignorable="d"
             DataContextChanged="UserControl_DataContextChanged">
    <Grid x:Name="RootGrid">
        <Canvas>
            <Line x:Name="ActionPitchLine" Stroke="Red" StrokeThickness="8" X1="-2" X2="102" Visibility="Hidden"/>
            <Canvas x:Name="ScoreLineCanvas"/>
            <Canvas x:Name="ChordonymCanvas"/>
            <Path Canvas.Left="-4" Data="M0,0 L-17,-10 L-17,10 L0,0 L-5,0 L-14,-5 L-14,5 L-5,0 Z" Fill="White"/>
            <Line x:Name="TonicLine" Stroke="White" StrokeThickness="4" X1="0" X2="100"/>
            <Line x:Name="SelectedPitchLine" Stroke="Red" StrokeThickness="8" X1="-2" X2="102" Visibility="Hidden"/>
            <Rectangle x:Name="PitchLineSelector" Fill="Transparent" Canvas.Left="0" Canvas.Bottom="-20" Width="100" Height="40"
                       MouseRightButtonDown="PitchLineSelector_MouseRightButtonDown"
                       MouseRightButtonUp="PitchLineSelector_MouseRightButtonUp"
                       MouseLeftButtonDown="PitchSoundUpdate"
                       MouseLeftButtonUp="PitchLineSelector_MouseLeftButtonUp"
                       MouseMove="PitchSoundUpdate"
                       MouseLeave="PitchLineSelector_MouseLeave">
            </Rectangle>
        </Canvas>
        <Popup x:Name="ContextMenuPopup"
               AllowsTransparency="True"
               StaysOpen="False"
               HorizontalOffset = "150" VerticalOffset = "100"
               Closed="ContextMenuPopup_Closed">
            <local:ChordonymContextMenu x:Name="ContextMenu"/>
        </Popup>
    </Grid>
</UserControl>
