<UserControl x:Class="ShasavicMusicMaker.Controller.Score.ChordonymViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShasavicMusicMaker.Controller.Score"
             mc:Ignorable="d" 
             DataContextChanged="UserControl_DataContextChanged">
    <Grid>
        <Canvas>
            <Canvas x:Name="ScoreLineCanvas"/>
            <Canvas x:Name="ChordonymCanvas"/>
            <Path Canvas.Left="-4" Data="M0,0 L-17,-10 L-17,10 L0,0 L-5,0 L-14,-5 L-14,5 L-5,0 Z" Fill="White"/>
            <Line x:Name="TonicLine" Stroke="White" StrokeThickness="4" X1="0" X2="100"/>
            <Line x:Name="SelectedTonicLine" Stroke="Red" StrokeThickness="8" X1="-2" X2="102" Visibility="Hidden"/>
            <Rectangle x:Name="PitchLineSelector" Fill="Transparent" Canvas.Left="0" Canvas.Bottom="-20" Width="100" Height="40"
                       MouseRightButtonDown="PitchSoundUpdate"
                       MouseRightButtonUp="PitchSoundUpdate"
                       MouseLeftButtonDown="PitchSoundUpdate"
                       MouseLeftButtonUp="PitchLineSelector_MouseLeftButtonUp"
                       MouseMove="PitchSoundUpdate"
                       MouseLeave="PitchLineSelector_MouseLeave"/>
        </Canvas>
    </Grid>
</UserControl>
