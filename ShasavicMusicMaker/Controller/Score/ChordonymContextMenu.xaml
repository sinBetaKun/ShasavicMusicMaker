<UserControl x:Class="ShasavicMusicMaker.Controller.Score.ChordonymContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShasavicMusicMaker.Controller.Score"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MainStyle.xaml"/>
                <ResourceDictionary Source="/Symbol/DimensionSymbol.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Style="{StaticResource ContextMenu1}">
        <DockPanel>
            <Border Style="{StaticResource Box5}" DockPanel.Dock="Top" HorizontalAlignment="Left">
                <StackPanel x:Name="FormulaPanel" Orientation="Horizontal">
                    <ContentControl Content="{StaticResource m5d}"/>
                    <Rectangle Width="2"/>
                    <Canvas  Width="14" Height="32">
                        <Path Data="M1,10 L7,4 L13,10 M7,4 V20" StrokeThickness="2" Stroke="#AAAAAA"/>
                    </Canvas>
                    <Canvas  Width="14" Height="32">
                        <Path Data="M1,22 L7,28 L13,22 M7,28 V12" StrokeThickness="2" Stroke="#AAAAAA"/>
                    </Canvas>
                </StackPanel>
            </Border>
            <StackPanel>
                <Border x:Name="MutePitchLine" Style="{StaticResource ContextMenuItem1}"
                        MouseEnter="MenuItem_MouseEnter" MouseLeave="MenuItem_MouseLeave"  MouseLeftButtonUp="MutePitchLine_MouseLeftButtonUp">
                    <TextBlock x:Name="MutePitchLineText" IsHitTestVisible="False"/>
                </Border>
                <Border x:Name="RemovePitchLine" Style="{StaticResource ContextMenuItem1}"
                        MouseEnter="MenuItem_MouseEnter" MouseLeave="MenuItem_MouseLeave" MouseLeftButtonUp="RemovePitchLine_MouseLeftButtonUp">
                    <TextBlock x:Name="RemovePitchLineText" Text="Remove this pitch line" IsHitTestVisible="False"/>
                </Border>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
