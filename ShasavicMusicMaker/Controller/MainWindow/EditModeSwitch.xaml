<UserControl x:Class="ShasavicMusicMaker.Controller.MainWindow.EditModeSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShasavicMusicMaker.Controller.MainWindow"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Buttons/ScoreEditMode.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <WrapPanel Name="panel">
            <ToggleButton Click="Add_Click" Style="{StaticResource Pen}"/>
            <ToggleButton Click="Select_Click" Style="{StaticResource Select}"/>
            <ToggleButton Click="Remove_Click" Style="{StaticResource Eraser}"/>
        </WrapPanel>
    </Grid>
</UserControl>
